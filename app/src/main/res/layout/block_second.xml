<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/my_background"
    android:id="@+id/second">

    <TextView
        android:id="@+id/members_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Members"
        android:textColor="#229ED9"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group"
        android:src="@drawable/group_icon"
        app:layout_constraintTop_toBottomOf="@id/members_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:tint="#95a5a6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin"
        android:src="@drawable/admin_icon"
        app:layout_constraintTop_toBottomOf="@id/group"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:tint="#95a5a6" />

    <TextView
        android:id="@+id/subs_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Subscribers"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/members_txt"
        app:layout_constraintStart_toEndOf="@+id/group"
        android:layout_marginTop="8dp"
         />
    <TextView
        android:id="@+id/Admin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Aministrators"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/subs_text"
        app:layout_constraintStart_toEndOf="@+id/admin"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/subs_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="809"
        android:textColor="#229ED9"
        app:layout_constraintBottom_toBottomOf="@+id/subs_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subs_text" />

    <TextView
        android:id="@+id/admin_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="2"
        android:textColor="#229ED9"
        app:layout_constraintBottom_toBottomOf="@+id/Admin_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Admin_text" />
</androidx.constraintlayout.widget.ConstraintLayout>